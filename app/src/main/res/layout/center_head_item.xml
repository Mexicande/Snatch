<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_below="@id/toolbar"
    android:layout_marginTop="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/pay_bg_off">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="110dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/head_bg"
        android:layout_height="110dp">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/user_avator"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:onClick="goWaWa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/user_wqnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="@color/text_black"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未取娃娃"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <View
                android:layout_gravity="right"
                android:layout_width="0.5dp"
                android:background="@color/e_white"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:lines="1"
                    android:maxLines="8"
                    android:ellipsize="end"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                     />
                <TextView
                    android:id="@+id/user_id"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:66295694"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <View
                android:layout_gravity="right"
                android:layout_width="0.5dp"
                android:background="@color/e_white"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/layout_integal"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/integration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>