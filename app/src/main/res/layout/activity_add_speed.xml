<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/addspeed_bg"
    android:layout_height="match_parent"
    tools:context="com.deerlive.zhuawawa.activity.game.AddSpeedActivity">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:padding="10dp"
            android:layout_height="50dp"
            android:src="@mipmap/iv_add_back"/>
        <TextView
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_addspend"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_phone"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:background="@mipmap/iv_add_phone"
        android:layout_height="470dp">
        <LinearLayout
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bt_start"
                android:layout_width="120dp"
                android:text="免费"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:background="@drawable/add_start"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/iv_satar"/>
                <TextView
                    android:id="@+id/tv_spend"
                    android:textSize="9dp"
                    android:layout_marginLeft="1dp"
                    android:textColor="#E77C1B"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200金币/次"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="15dp"
                android:id="@+id/bt_share"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/attention_wechat"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:id="@+id/view"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/iv_add_wawa"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:id="@+id/bt_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:src="@mipmap/iv_ranking_list"
                android:adjustViewBounds="true"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/iv_add_mountain"/>
</RelativeLayout>
