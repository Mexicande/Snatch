<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:stv="http://schemas.android.com/tools"
    android:id="@+id/item_game_container"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="10dp"
    app:cardElevation="0.8dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/buttom"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gift_name"
                    android:textColor="@color/text_black"
                    android:text="大眼兔"
                    android:textSize="13sp"/>
                    <TextView
                        android:layout_below="@id/gift_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="7dp"
                        android:id="@+id/gift_price"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="#EC116D"
                        android:text="200积分"/>
                <com.deerlive.zhuawawa.view.supertextview.SuperButton
                    android:id="@+id/duihuan"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    app:sCornersRadius="15dp"
                    app:sSelectorNormalColor="@color/colorPrimary"
                    app:sSelectorPressedColor="@color/text_gray"
                    android:textColor="@color/white"
                    app:sUseSelector="true"
                    android:textSize="11sp"
                    android:text="兑换"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_above="@id/buttom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gift_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@mipmap/logo"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>