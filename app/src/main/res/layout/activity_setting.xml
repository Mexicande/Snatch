<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_item"/>

        <LinearLayout
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:id="@+id/invite"
                android:onClick="gamehelp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                app:sLeftTextColor="@color/text_color"
                app:sRightIconRes="@mipmap/iv_right_arrow"
                app:sRightIconHeight="12dp"
                app:sRightIconWidth="10dp"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_helps" />
            <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:onClick="yaoqing"
                android:layout_marginTop="20dp"
                app:sDividerLineType="bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                app:sDividerLineHeight="1dp"
                app:sLeftTextColor="@color/text_color"
                app:sDividerLineColor="@color/e_white"
                app:sBottomDividerLineMarginLR="10dp"
                app:sRightIconRes="@mipmap/iv_right_arrow"
                app:sRightIconHeight="12dp"
                app:sRightIconWidth="10dp"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_yaoqing" />
            <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:onClick="yaoqingma"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                app:sDividerLineColor="@color/e_white"
                app:sLeftTextColor="@color/text_color"
                app:sBottomDividerLineMarginLR="10dp"
                app:sRightIconRes="@mipmap/iv_right_arrow"
                app:sRightIconHeight="12dp"
                app:sRightIconWidth="10dp"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_yaoqingma" />

            <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:id="@+id/checkbox_bgm"
                android:layout_marginTop="20dp"
                app:sDividerLineType="bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                app:sDividerLineHeight="1dp"
                app:sLeftTextColor="@color/text_color"
                app:sDividerLineColor="@color/e_white"
                app:sBottomDividerLineMarginLR="10dp"
                app:sRightViewType="switchBtn"
                app:sSwitchIsChecked="true"
                app:sThumbResource="@drawable/thumb"
                app:sTrackResource="@drawable/track"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_bg_music" />

            <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:id="@+id/checkbox_yinxiao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sDividerLineHeight="1dp"
                android:textSize="16sp"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/text_color"
                app:sRightViewType="switchBtn"
                app:sSwitchIsChecked="true"
                app:sThumbResource="@drawable/thumb"
                app:sTrackResource="@drawable/track"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_bg_yinxiao" />
            <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:onClick="feedback"
                android:layout_marginTop="20dp"
                app:sDividerLineType="bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sDividerLineHeight="1dp"
                android:textSize="16sp"
                app:sBottomDividerLineMarginLR="10dp"
                app:sLeftTextColor="@color/text_color"
                app:sDividerLineColor="@color/e_white"
                app:sRightIconRes="@mipmap/iv_right_arrow"
                app:sRightIconHeight="12dp"
                app:sRightIconWidth="10dp"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_feedback" />
            <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:id="@+id/bt_version"
                android:onClick="checkUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sBottomDividerLineMarginLR="10dp"
                android:textSize="16sp"
                app:sDividerLineColor="@color/e_white"
                app:sDividerLineType="bottom"
                app:sRightTextString="v1.3.0"
                app:sDividerLineHeight="1dp"
                app:sRightTextColor="@color/black_666"
                app:sLeftTextColor="@color/text_color"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_update" />
           <!-- <com.deerlive.zhuawawa.view.supertextview.SuperTextView
                android:onClick="aboutUs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sTopDividerLineMarginLR="10dp"
                android:textSize="16sp"
                app:sDividerLineColor="@color/e_white"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/text_color"
                app:sRightIconRes="@mipmap/iv_right_arrow"
                app:sRightIconHeight="12dp"
                app:sRightIconWidth="10dp"
                app:sLeftTextSize="13dp"
                app:sLeftTextString="@string/set_about" />-->
        </LinearLayout>

        <com.deerlive.zhuawawa.view.supertextview.SuperButton
            android:onClick="logout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            app:sCornersRadius="20dp"
            app:sSolidColor="@color/bg_color"
            app:sStrokeWidth="1dp"
            android:layout_marginBottom="50dp"
            app:sStrokeColor="@color/text_gray"
            android:textColor="@color/text_gray"
            />
    </LinearLayout>



</ScrollView>
