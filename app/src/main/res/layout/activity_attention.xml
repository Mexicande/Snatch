<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/attention_bg"
    tools:context="com.deerlive.zhuawawa.activity.game.AttentionActivity">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:padding="10dp"
            android:layout_height="40dp"
            android:src="@mipmap/iv_attention_back"/>
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#121615"
            android:layout_toRightOf="@id/bt_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_attention"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/bt_share"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:src="@mipmap/attention_wechat"
        android:layout_marginBottom="95dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:id="@+id/bt_start"
        android:layout_width="197dp"
        android:layout_height="67dp"
        android:background="@mipmap/attention_start"
        android:layout_marginBottom="159dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/iv_satar"/>
            <TextView
                android:id="@+id/tv_spend"
                android:textSize="9dp"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200金币/次"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_count"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"
        android:textColor="#8A0003"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前共有216参赛"/>
</RelativeLayout>
